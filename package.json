{
  "name": "atix-labs-challenge",
  "version": "1.0.0",
  "description": "technical challenge - REST API to write on shared log",
  "main": "src/index.mjs",
  "scripts": {
    "start": "NODE_ENV=development nodemon src/index.mjs",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fernandocanizo/atix-labs-challenge.git"
  },
  "keywords": [
    "challenge",
    "nodejs",
    "rest",
    "api"
  ],
  "author": "Fernando L. Canizo <fernandocanizo@gmail.com> (https://github.com/fernandocanizo/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fernandocanizo/atix-labs-challenge/issues"
  },
  "homepage": "https://github.com/fernandocanizo/atix-labs-challenge#readme",
  "dependencies": {
    "express": "^4.17.2",
    "nodemon": "^2.0.15"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "husky": "^7.0.4",
    "xo": "^0.47.0"
  },
  "xo": {
    "space": true,
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "unicorn/prevent-abbreviations": "off",
      "unicorn/catch-error-name": "off",
      "import/no-unassigned-import": [
        "error",
        {
          "allow": [
            "root.mjs"
          ]
        }
      ]
    }
  }
}
